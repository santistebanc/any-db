{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "lib": ["DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
